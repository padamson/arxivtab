<% if signed_in? %>
  <aside>
  <section>
  <%= render 'shared/user_info' %>
  </section>
  <section>
  <%= render 'shared/stats' %>
  </section>
  <section>
  <!--button id="addDocumentButton" type="button">Add Document</button-->
  <%= link_to 'Add document to tab', '#new_document_modal', 'data-toggle' => 'modal' %>
  <%#= render 'shared/document_form' %>
  <%#= render 'shared/post_form' %>
  <%= render 'shared/new_document_modal' %>
  </section>
  </aside>
  <!--h3>Micropost Feed</h3-->
  <section>
  <%= render 'shared/micropost_form' %>
  </section>
  <section>
  <%= render 'shared/feed' %>
  </section>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to arXivTab.org</h1>

    <h2>
      Tab PDFs on 
      <a href="http://arxiv.org/">arXiv.org</a>.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
